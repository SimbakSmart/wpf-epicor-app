<Window x:Class="Epicor.App.View.StartPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Epicor.App.View"
        xmlns:vm="clr-namespace:Epicor.App.ViewModel"
        mc:Ignorable="d"
        Title="StartPage" Height="450" Width="800">

    <Window.DataContext>

        <vm:StartViewModel/>
    </Window.DataContext>
    
    <Grid>

        <StackPanel>
            <TextBlock Text="{Binding IsActive}" />
            <Button Content="Click" Command="{Binding ToogleCommand}" Width="125" />
        </StackPanel>
    </Grid>
</Window>
