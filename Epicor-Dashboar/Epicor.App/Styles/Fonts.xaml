<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">


    <!--Font Files-->
    <FontFamily x:Key="AntonRegular">pack://appliction;,,,/Fonts/#Anton Regular</FontFamily>

    <!--Font Size-->
    <system:Double x:Key="FontSizeExtraLarge">24</system:Double>



    <!--Menu Title-->
    <Style TargetType="{x:Type TextBlock}" x:Key="MenuTitleBlockStyle">
        <Setter Property="FontFamily" Value="{StaticResource AntonRegular}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeExtraLarge}" />
    </Style>

</ResourceDictionary>