<UserControl x:Class="Epicor.App.View.Controls.UsersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Epicor.App.View.Controls"
             xmlns:vm="clr-namespace:Epicor.App.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:UsersViewModel />
    </UserControl.DataContext>
    
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding FirstName}" />
            <Button Content="Click" Command="{Binding ActionEventCommand}" Width="125" />
        </StackPanel>
       
        
    </Grid>
</UserControl>
