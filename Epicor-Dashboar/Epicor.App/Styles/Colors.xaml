<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!--Body Light Color-->
    <Color x:Key="LightColor">#fff</Color>
    <SolidColorBrush x:Key="LightColorBrush" Color="{StaticResource LightColor}" />

    <Color x:Key="BackgroundModalColor">#bfbbbb</Color>
    <SolidColorBrush x:Key="BackgroundModalColorBrush" Color="{StaticResource BackgroundModalColor}" />
</ResourceDictionary>